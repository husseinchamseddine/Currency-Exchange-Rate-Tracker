<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<FlowPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.chams.exchange.login.Login"
          stylesheets="@login.css" styleClass="primary-color"
          prefHeight="400.0" prefWidth="600.0"
          orientation="VERTICAL"
          vgap="10"
          alignment="CENTER"
>
    <Label styleClass="title" text="Login" textFill="WHITE"/>
    <Label text="Username" textFill="WHITE"/>
    <TextField fx:id="usernameTextField"/>
    <Label text="Password" textFill="WHITE"/>
    <TextField fx:id="passwordTextField"/>
    <Button text="Login" onAction="#login"/>
</FlowPane>