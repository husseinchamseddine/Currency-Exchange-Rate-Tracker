<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" fx:controller="com.chams.exchange.Parent" prefHeight="740.0" prefWidth="1220.0" >


    <left>
        <VBox prefHeight="200.0" prefWidth="340.0" spacing="50.0" styleClass="primary-color" stylesheets="@parent.css" BorderPane.alignment="CENTER">
            <Button onAction="#ratesSelected" prefHeight="43.0" prefWidth="344.0" styleClass="primary-color" stylesheets="@parent.css" text="Exchange Rate" textFill="WHITE">
          <font>
             <Font size="20.0" />
          </font></Button>

            <Button fx:id="transactionButton" onAction="#transactionsSelected" prefHeight="43.0" prefWidth="410.0" styleClass="primary-color" stylesheets="@parent.css" text="Transactions" textFill="WHITE">
          <font>
             <Font size="20.0" />
          </font></Button>

            <Button fx:id="loginButton" maxWidth="344.0" onAction="#loginSelected" prefHeight="26.0" prefWidth="344.0" styleClass="primary-color" stylesheets="@parent.css" text="Login" textFill="#efefef">
          <font>
             <Font size="20.0" />
          </font></Button>

            <Button fx:id="registerButton" maxWidth="348.0" onAction="#registerSelected" prefHeight="26.0" prefWidth="348.0" styleClass="primary-color" stylesheets="@parent.css" text="Register" textFill="WHITE">
          <font>
             <Font size="20.0" />
          </font></Button>

            <Button fx:id="logoutButton" maxWidth="350.0" onAction="#logoutSelected" prefHeight="43.0" prefWidth="350.0" styleClass="primary-color" stylesheets="@parent.css" text="Logout" textFill="WHITE">
          <font>
             <Font size="20.0" />
          </font></Button>

            <Button fx:id="moreInfoButton" onAction="#moreInfoSelected" prefHeight="43.0" prefWidth="357.0" styleClass="primary-color" stylesheets="@parent.css" text="More Info" textFill="WHITE">
          <font>
             <Font size="20.0" />
          </font></Button>

            <Button fx:id="profileButton" onAction="#profileSelected" prefHeight="43.0" prefWidth="350.0" styleClass="primary-color" stylesheets="@parent.css" text="Profile" textFill="WHITE">
          <font>
             <Font size="20.0" />
          </font></Button>

        <Button fx:id="balanceButton" onAction="#balanceSelected" prefHeight="43.0" prefWidth="350.0" styleClass="primary-color" stylesheets="@parent.css" text="Balance" textFill="WHITE">
            <font>
                <Font size="20.0" />
            </font></Button>
        </VBox>
    </left>


    <center>
        <fx:include source="rates/rates.fxml"/>
    </center>

</BorderPane>
