<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<FlowPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.chams.exchange.register.Register"
          stylesheets="@register.css" styleClass="primary-color"
          prefHeight="400.0" prefWidth="600.0"
          orientation="VERTICAL"
          vgap="10"
          alignment="CENTER"
>
    <Label styleClass="title" text="Create New Account" textFill="WHITE"/>
    <Label text="Username" textFill="WHITE"/>
    <TextField fx:id="usernameTextField"/>
    <Label text="Password" textFill="WHITE"/>
    <TextField fx:id="passwordTextField"/>
    <Label text="Email" textFill="WHITE"/>
    <TextField fx:id="emailTextField"/>
    <Button text="Create Account" onAction="#register"/>
</FlowPane>

